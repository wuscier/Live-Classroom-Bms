@model RedCdn.ClassRoom.BMS.LogonModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="@Url.Content("~/Content/css/backstageStyle.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/layer/layer.js")" type="text/javascript"></script>
</head>
    <body style="background-color: #0e997a;">
        @using (Html.BeginForm("Logon", "Account",FormMethod.Post))
        {
            <div class="loginPagespan">Butel 同步教室后台管理系统</div>
            <div class="loginPage">
                <ul class="loginBox">
                    <li><input class="book_input1" value="请输入用户名" type="text" name="username" onfocus="if(this.value==defaultValue) {this.value='';}" onblur="if(!value) {value=defaultValue;}" /></li>
                    <li><input class="book_input2" type="password" name="password" /></li>
                    <li class="remember">@Html.CheckBoxFor(module=>module.RememberMe)<font>记住密码</font></li>
                    <li class="loginBtn"><input type="button" value="登 录" onclick="userLogon()" /></li>
                    <li><label style="color: red">@ViewBag.LoginInfo</label></li>
                </ul>
            </div>
        }
    </body>

    <script type="text/javascript">
        function userLogon() {
            var verifyName = $('.book_input1').val() === "" || $('.con-1').val() === "请输入用户名";
            var verifyPwd = $('.book_input2').val() === "";
            if (verifyName) {
                layer.alert('请输入用户名', { icon: 1, time: 3000 });
            }

            if (verifyPwd) {
                layer.alert('请输入密码', { icon: 1, time: 3000 });
            }

            if (!verifyPwd && !verifyPwd)
                $('form').submit();
        }

        document.onkeydown = function(eventTag) {
            var event = eventTag || window.event;
            var currentKey = event.charCode || event.keyCode;
            if (currentKey == 13) {
                userLogon();
            }
        };

    </script>
</html>